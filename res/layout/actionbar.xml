<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474751"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/actionbar_img_app"
        android:layout_width="13pt"
        android:layout_height="13pt"
        android:layout_marginLeft="3pt"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_app" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:text="Wi-Fi Zombie"
        android:textColor="#55ffffff"
        android:textSize="10pt" />

    <ImageView
        android:id="@+id/actionbar_img_refresh"
        android:layout_width="10pt"
        android:layout_height="10pt"
        android:layout_marginRight="3pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_btn_refresh" />

</RelativeLayout>
